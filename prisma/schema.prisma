generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String?
  password  String
  createdAt DateTime  @default(now())
  books     Book[]    @relation("UserBooks")
  summaries Summary[] @relation("UserSummaries")
}

model Book {
  id          Int      @id @default(autoincrement())
  title       String
  author      String?
  description String?
  pdfPath     String?
  status      String   @default("uploaded")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  ownerId     Int
  owner       User     @relation("UserBooks", fields: [ownerId], references: [id])
  summaries   Summary?
}

model Summary {
  id          Int      @id @default(autoincrement())
  content     String
  highlights  String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  bookId      Int      @unique
  createdById Int?
  book        Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
  createdBy   User?    @relation("UserSummaries", fields: [createdById], references: [id])
}
